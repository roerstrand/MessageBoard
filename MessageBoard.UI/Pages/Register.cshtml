@page
@model MessageBoard.UI.Pages.RegisterModel


<h2>Register</h2>

<form method="post">

    <div>

        <input type="text" placeholder="Username" asp-for="Username" />
    </div>

    <div>

        <input type="text" placeholder="Password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>

        <input type="text" placeholder="ConfirmPassword" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>


    <button type="submit">Register</button>

</form>